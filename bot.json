@bot.message_handler(func=lambda message: True)
def detect_link(message):
    if not message.text:
        return
    urls = re.findall(r'(https?://[^\s]+)', message.text)
    for url in urls:
        if "tiktok.com" in url:
            save_message_for_deletion(message.chat.id, message.message_id)
            handle_tiktok_link(message, url)
            return

def handle_tiktok_link(message, url):
    try:
        params = {'url': url}
        response = requests.get(API_URL, params=params, timeout=10).json()  # thĂªm timeout
        if response.get("code") != 0:
            bot.reply_to(message, "â ï¸ KhĂ´ng thá»ƒ láº¥y dá»¯ liá»‡u tá»« liĂªn káº¿t.")
            return

        data = response["data"]
        video_url = data.get("play")
        music_url = data.get("music", "")
        nickname = data.get("nickname", "").strip()
        unique_id = data.get("unique_id", "").strip()

        nickname_display = nickname if nickname else "KhĂ´ng rĂµ"
        unique_id_display = f"@{unique_id}" if unique_id else ""
        caption = f"đŸ‘¤ {nickname_display} ({unique_id_display})\nđŸµ Nháº¡c ná»n: báº¥m nĂºt dÆ°á»›i đŸ‘‡"

